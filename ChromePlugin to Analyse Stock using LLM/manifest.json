{
  "manifest_version": 3,
  "name": "Stock Price Analyzer",
  "version": "1.0",
  "description": "Analyze stock prices using Gemini-2.0-flash LLM",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "storage",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "https://*.googleapis.com/",
    "https://*.alphavantage.co/"
  ]
} 